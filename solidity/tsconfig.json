{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "importHelpers": true
  },
  "include": [
    "artifacts/*",
    "artifacts/**/*",
    "scripts/*",
    "scripts/**/*",
    "contracts/*",
    "contracts/**/*",
    "test/*",
    "test/**/*",
    "typechain/*",
    "typechain/**/*",
    "hardhat.config.ts"
  ]
}
